{
    "name": "aaemnnosttv/wp-cli-dotenv-command",
    "description": "Dotenv commands for WP-CLI",
    "type": "wp-cli-package",
    "homepage": "https://aaemnnost.tv/wp-cli-commands/dotenv/",
    "support": {
        "issues": "https://github.com/aaemnnosttv/wp-cli-dotenv-command/issues"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Evan Mattson",
            "email": "me@aaemnnost.tv",
            "homepage": "https://aaemnnost.tv"
        }
    ],
    "scripts": {
        "test": [
            "@composer run-phpunit",
            "@composer run-behat"
        ],
        "run-phpunit": "phpunit --colors=always",
        "run-behat": "behat --ansi"
    },
    "require": {
        "php": "^5.6 | ^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0",
        "wp-cli/wp-cli": "^1.0",
        "behat/behat": "2.5.*"
    },
    "suggest": {
        "paragonie/random_compat": "Allows for local salt generation on PHP 5.x"
    },
    "autoload": {
        "psr-4": {"WP_CLI_Dotenv\\": "src/"},
        "files": ["command.php"]
    },
    "autoload-dev": {
        "classmap": ["tests/Fixtures.php", "tests/DeterministicSaltProvider.php"]
    }
}
